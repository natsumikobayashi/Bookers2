<div class="container px-5 px-sn-0">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
    <th><%= image_tag @user.get_profile_image(100,100) %></th>
     <table class="table">
      <tbody>
       <tr></tr>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
      </tbody>
     </table>
     <div class="row">
      <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
      <% end %>
     </div>
     <h2 class="mt-3">New book</h2>
     <%= form_with model: @book do |f| %>
      <div class="form-group">
       <label for="book_title">Title</label><br>
       <%= f.text_field :title %>
      </div>
      <div class="form-group">
       <label for="book_body">Opinion</label><br>
        <%= f.text_area :body %>
      </div>
       <%= f.submit 'Create Book' %>
     <% end %>
  </div>
  <div class='col-md-8 offset-md-1'>
   <h2>Books</h2>
   <table class='table table-hover'>
     <thead>
       <tr>
        <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
       </tr>
     </thead>
     <% @books.each do |book| %>
     <tbody>
   <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %><br>
    <%= link_to user_path(book.user_id) do %><%= book.user.name %><% end %>
    </td>
    <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
    <td><%= book.body %></td>
    <td></td>
    <td></td>
    </tr>
    </tbody>
    <% end %>
    </table>
  </div>
 </div>
</div>