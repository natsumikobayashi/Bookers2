<div class="container px-5 px-sn-0">
 <div class="row">
   <%= render 'books/userinfo', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1" >
     <h2>Books</h2>
       <table class="table">
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
       <% @books.each do|book| %>
       <tbody>
         <tr>
           <td><%= image_tag book.user.get_profile_image(100,100) %></td>
           <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
           <td><%= book.body %></td>
         </tr>
       </tbody>
       <% end %>
       </div>
  </table>
 </div>
</div>